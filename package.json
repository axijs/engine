{
  "name": "axi-engine",
  "version": "0.1.0",
  "description": "A modular game engine built with TypeScript and powered by Pixi.js",
  "license": "MIT",
  "keywords": [
    "axi-engine",
    "typescript",
    "gamedev"
  ],
  "main": "index.js",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "devDependencies": {
    "@types/node": "latest",
    "tsup": "^8.5.1",
    "typedoc": "^0.28.14",
    "typedoc-plugin-markdown": "^4.9.0",
    "typescript": "~5.8.2"
  },
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",

    "build:events": "npm run build --workspace=@axi-engine/events",
    "publish:events": "npm publish --workspace=@axi-engine/events --access public",
    "release:events": "npm run build:events && npm run publish:events",

    "build:fields": "npm run build --workspace=@axi-engine/fields",
    "publish:fields": "npm publish --workspace=@axi-engine/fields --access public",
    "release:fields": "npm run build:fields && npm run publish:fields",

    "build:states": "npm run build --workspace=@axi-engine/states",
    "publish:states": "npm publish --workspace=@axi-engine/states --access public",
    "release:states": "npm run build:states && npm run publish:states",

    "build:utils": "npm run build --workspace=@axi-engine/utils",
    "publish:utils": "npm publish --workspace=@axi-engine/utils --access public",
    "release:utils": "npm run build:utils && npm run publish:utils"

  },
  "private": true
}
